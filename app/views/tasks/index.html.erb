<div class="container">
  <div class="title">
    <h1>All tasks</h1>
  </div>

  <div class="checkbox">
    <ul>
      <% @tasks.each do |task| %>
        <li>
          <% if task.completed == false %>
            <input type="checkbox">
          <% else %>
            <input type="checkbox" checked>
          <% end %>
          <%= link_to task.title, task_path(task.id) %>
        </li>
      <% end %>

    </ul>
    <div class="btn btn-info m-3">
      <span>
      <%= link_to "Add new task", new_task_path %>
      </span>
    </div>
  </div>
</div>

